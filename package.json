{
  "name": "transformer-js",
  "version": "0.0.5",
  "description": "",
  "main": "lib/index.js",
  "scripts": {
    "test": "npm run test:lint && npm run test:unit",
    "test:unit": "jest src --coverage",
    "test:lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "build:all": "npm run build && npm run build:docs && npm run build:readme",
    "build": "babel --out-dir lib --ignore *.test.js --copy-files src/",
    "build:docs": "jsdoc --readme README.md --package package.json --destination docs src",
    "build:readme": "jsdoc2md --template README.md.hb src/* > README.md",
    "release:tag": "git tag $npm_package_version && git push --tags"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "traverse": "^0.6.6"
  },
  "keywords": [
    "Transform",
    "Transformer",
    "Presenter",
    "Sanitizer",
    "Redact"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.10.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^21.2.1",
    "js-doc": "^0.5.0",
    "jsdoc-to-markdown": "^3.0.1",
    "prettier": "^1.7.4"
  },
  "files": [
    "README.md",
    "lib/*",
    "package.json",
    "package.lock"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/*.js",
      "!src/*.test.js"
    ]
  }
}
